include <string>;

class base1 = 0
{
  bool --very-long-flag {"Long flag."};
};

class base2
{
  std::string -s {"<str>", "Short string."};
};

class interm: base1
{
  int -i = 1 {"<num>", "Integer."};
};

class options: interm, base2
{
  std::string --string {"<str>", "Long string."};
};
